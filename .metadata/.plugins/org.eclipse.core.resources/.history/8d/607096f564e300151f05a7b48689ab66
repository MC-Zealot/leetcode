package com.leetCode._2th;
/**
 * Implement int sqrt(int x).

Compute and return the square root of x.
 * 
 * @author Zealot
 * @date 2016年3月5日 下午3:53:24 
 *
 */
public class Sqrtx {
	public int mySqrt(int x) {
		if(x<=0){
			return 0;
		}
		int i  = 1;
		for(; i*i<=x;){
			i++;
		}
		return --i;
    }
	public int mySqrt(int x) {
		 long i = 0;
		 long j = x / 2 + 1;
		 while (i <= j)
		 {
		 long mid = (i + j) / 2;
		 long sq = mid * mid;
		 if (sq == x) return mid;
		 else if (sq < x) i = mid + 1;
		else j = mid - 1;
		}
		return j;
		}
	public static void main(String[] args) {
		Sqrtx x = new Sqrtx();
		System.out.println(x.mySqrt(100));
	}
}
